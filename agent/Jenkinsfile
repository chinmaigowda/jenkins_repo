pipeline {
    agent {
        label 'slave1'
    }
    parameters {
        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')
        string(name: 'PARAM_STRING', defaultValue: 'input_param', description: 'This is a string parameter')
    }
    environment {
        GLOBAL = 'This is a global variable'
    }
    triggers {
        cron('*/59 * * * *')
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                    set +x
                    echo "$GLOBAL"
                    echo "${PARAM_STRING}"
                '''
            }
        }
    
        stage('Build1') {
            environment {
                LOCAL = "This is a local variable"
                }
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh '''
                        #!/bin/bash
                        ls -lrt
                        sleep 10
                        echo "$LOCAL"
                        exit 1
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                    echo "$LOCAL"
                '''
            }
        }
        stage('Test1') {
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                '''
            }
        }
    }    
}
