pipeline {
    agent any
    parameters {
        booleanParam(name: 'CHECKOUT', defaultValue: true, description: 'Toggle this to checkout')
        booleanParam(name: 'BUILD', defaultValue: true, description: 'Toggle this to checkout')
        booleanParam(name: 'TEST', defaultValue: true, description: 'Toggle this to checkout')
        booleanParam(name: 'DEPLOY', defaultValue: true, description: 'Toggle this to checkout')
    }
    stages{
        stage('CHECKOUT') {
            when {
                expression {
                    params.CHECKOUT == true
                }
            }
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [[url: 'https://github.com/chinmaigowda/mvn1.git',
                    credentialsId: 'Github']]])        
                }
            }
        }
        stage('BUILD') {
            when {
                expression {
                    params.CHECKOUT == true
                }
            }
            steps {
                sh '''
                    sleep 5
                    exit 0
                '''
            }
        }
        stage('TEST') {
            when {
                expression {
                    params.BUILD == true
                }
            }
            steps {
                sh '''
                    sleep 5
                    ls -lrt
                '''
            }
        }
        stage('DEPLOY') {
            dependsOn 'TEST'
            steps {
                    sh '''
                    sleep 5
                    ls -lrt
                '''
            }
        }
    }
}