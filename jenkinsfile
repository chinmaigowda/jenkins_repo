pipeline {
    agent {
        label 'slave2'
    }

    stages {
        stage ('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [[url: 'https://github.com/chinmaigowda/mavendemo.git',
                    credentialsId: 'e573b12d-5472-45ac-89d3-4eed37dd7573']]])
                }
            }
        }
        stage ('Build') {
            steps {
                sh '''
                    ls -lrt
                    sleep 5
                '''
            }
        }
        stage ('Test') {
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                '''
            }
        }
    }
}