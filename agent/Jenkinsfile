pipeline {
    set +x
    agent {
        label 'slave1'
    }
    environment {
        GLOBAL = 'This is a global variable'
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                    echo "$GLOBAL"
                '''
            }
        }
    
        stage('Build1') {
            environment {
                LOCAL = "This is a local variable"
            }
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                    echo "$LOCAL"
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                    echo "$LOCAL"
                '''
            }
        }
        stage('Test1') {
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                '''
            }
        }
    }    
}
